<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:height="200dp"
            android:inputType="textMultiLine"
            android:text="Here is all the good old wheather info however it&apos;ll be" />

        <EditText
            android:id="@+id/EditText04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="70dp"
            android:inputType="textMultiLine"
            android:onClick="selectPivot"
            android:text="Pivot 1" />

        <EditText
            android:id="@+id/EditText03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="70dp"
            android:inputType="textMultiLine"
            android:text="Pivot 2" />

        <EditText
            android:id="@+id/EditText02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="70dp"
            android:inputType="textMultiLine"
            android:text="Pivot 3" />

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="70dp"
            android:inputType="textMultiLine"
            android:text="Pivot 4" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="70dp"
            android:inputType="textMultiLine"
            android:text="Pivot 5" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>